<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>com.MaYanzhen.week6.demo.JdbcServletContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <servlet-class>com.MaYanzhen.week4.demo.ConfigDemoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>name</param-name>
        <param-value>MaYanzhen</param-value>
    </context-param>
    <context-param>
        <param-name>student-id</param-name>
        <param-value>2020211002010230</param-value>
    </context-param>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:sqlserver://localhost:1433;DatabaseName=userjmy</param-value>
    </context-param>
    <context-param>
        <param-name>Username</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>Password</param-name>
        <param-value>123456</param-value>
    </context-param>

    <servlet>
    <servlet-name>anyName</servlet-name>
        <servlet-class>com.MaYanzhen.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.MaYanzhen.week3.demo.LifeCycleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.MaYanzhen.week3.demo.RegisterServlet</servlet-class>
    </servlet>
<!--    <servlet>-->
<!--        <servlet-name>SearchServlet</servlet-name>-->
<!--        <servlet-class>com.MaYanzhen.week6.demo.SearchServlet</servlet-class>-->
<!--    </servlet>-->
